{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "mode": "full",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)",
    "group:all"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "regexManagers": [
    {
      "description": "Update go-version in GitHub Actions workflows",
      "fileMatch": ["^\\.github/workflows/[^/]+\\.ya?ml$"],
      "matchStrings": ["go-version:\\s*['\"]?(?<currentValue>[0-9.]+)['\"]?"],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version"
    },
    {
      "description": "Update GO_VERSION env var in CI workflows",
      "fileMatch": ["^\\.github/workflows/[^/]+\\.ya?ml$"],
      "matchStrings": ["GO_VERSION:\\s*['\"]?(?<currentValue>[0-9.]+)['\"]?"],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version"
    },
    {
      "description": "Update golang Docker image version in Dockerfiles",
      "fileMatch": [
        "Dockerfile",
        "Dockerfile\\..+",
        "^\\.devcontainer/Dockerfile"
      ],
      "matchStrings": ["FROM\\s+golang:(?<currentValue>[0-9.]+)(?:-[a-z]+)?"],
      "depNameTemplate": "golang",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Pin Go to 1.25.x until golangci-lint supports 1.26",
      "matchPackageNames": ["go", "golang"],
      "matchDatasources": ["golang-version", "gomod", "docker"],
      "allowedVersions": "1.25.x",
      "groupName": "go"
    },
    {
      "description": "Group Go module dependencies",
      "matchManagers": ["gomod"],
      "matchPackageNames": ["!go"],
      "groupName": "go dependencies"
    },
    {
      "description": "Group all NPM dependencies",
      "matchManagers": ["npm"],
      "groupName": "npm dependencies"
    },
    {
      "description": "Group Helm chart dependencies",
      "matchManagers": ["helmv3"],
      "groupName": "helm dependencies"
    },
    {
      "description": "Automerge minor and patch updates for dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Pin eslint to v9 until typescript-eslint v9 is stable",
      "matchPackageNames": ["eslint", "@eslint/js"],
      "allowedVersions": "9.x",
      "matchManagers": ["npm"]
    },
    {
      "description": "Allow both elasticsearch v8 and v9 as separate major versions",
      "matchPackageNames": [
        "github.com/elastic/go-elasticsearch/v8",
        "github.com/elastic/go-elasticsearch/v9"
      ],
      "separateMajorMinor": false,
      "major": {
        "enabled": false
      }
    }
  ]
}
