{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "mode": "full",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)",
    "group:all"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "regexManagers": [
    {
      "description": "Update GO_VERSION in CI workflow",
      "fileMatch": ["^\\.github/workflows/[^/]+\\.ya?ml$"],
      "matchStrings": ["GO_VERSION:\\s*\"(?<currentValue>[^\"]+)\""],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version"
    }
  ],
  "packageRules": [
    {
      "description": "Group Go version updates across go.mod and CI workflows",
      "matchPackageNames": ["go"],
      "matchDatasources": ["golang-version", "gomod"],
      "groupName": "go"
    },
    {
      "description": "Group Go module dependencies",
      "matchManagers": ["gomod"],
      "matchPackageNames": ["!go"],
      "groupName": "go dependencies"
    },
    {
      "description": "Group all NPM dependencies",
      "matchManagers": ["npm"],
      "groupName": "npm dependencies"
    },
    {
      "description": "Group Helm chart dependencies",
      "matchManagers": ["helmv3"],
      "groupName": "helm dependencies"
    },
    {
      "description": "Automerge minor and patch updates for dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Pin eslint to v9 until typescript-eslint v9 is stable",
      "matchPackageNames": ["eslint", "@eslint/js"],
      "allowedVersions": "9.x",
      "matchManagers": ["npm"]
    }
  ]
}
